# :command.version_command
version_command() {
  echo "$version"
}

# :command.usage
cli_usage() {
  if [[ -n $long_usage ]]; then
    echo -e "cli - Sample application that requires environment variables"
    echo 
  else
    echo -e "cli - Sample application that requires environment variables"
    echo 
  fi
  echo -e "Usage:"
  echo -e "  cli [command] [options]"
  echo -e "  cli [command] --help | -h"
  echo -e "  cli --version"
  echo
  # :command.usage_commands
  echo -e "Commands:"
  echo "  verify   Verify your user"
  echo

  if [[ -n $long_usage ]]; then
    echo -e "Options:"
    # :command.usage_fixed_flags
    echo "  --help, -h"
    echo -e "    Show this help"
    echo
    echo "  --version"
    echo -e "    Show version number"
    echo

    # :command.usage_environment_variables
    echo -e "Environment Variables:"
    
    # :environment_variable.usage
    echo "  API_KEY"
    echo -e "    Set your API key"
    echo

  fi
}

# :command.usage
cli_verify_usage() {
  if [[ -n $long_usage ]]; then
    echo -e "cli verify - Verify your user"
    echo 
  else
    echo -e "cli verify - Verify your user"
    echo 
  fi
  echo -e "Usage:"
  echo -e "  cli verify [options]"
  echo -e "  cli verify --help | -h"
  echo

  if [[ -n $long_usage ]]; then
    echo -e "Options:"
    # :command.usage_fixed_flags
    echo "  --help, -h"
    echo -e "    Show this help"
    echo

    # :command.usage_environment_variables
    echo -e "Environment Variables:"
    
    # :environment_variable.usage
    echo "  MY_SECRET (required)"
    echo -e "    Your secret"
    echo

  fi
}

# :command.inspect_args
inspect_args() {
  echo args:
  for k in "${!args[@]}"; do echo "- \${args[$k]} = ${args[$k]}"; done
}

